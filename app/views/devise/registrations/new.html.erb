<div class="devise columns is-centered is-mobile mt-5">
  <div class="column is-four-fifths-mobile is-half-tablet is-two-fifths-desktop is-one-third-widescreen">
    <div class="card mt-3">
      <div class="card-content">
        <h2 class="title has-text-centered">Cadastro</h2>

        <div class="has-text-centered subtitle">
          <p>Vai ser um <b> prazer </b> </br>
          ter vocÃª aqui com a gente :)<p>
        </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field">
              <%= f.label :email%><br />
              <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input", type:"text"%>
            </div>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em class="minimum_password_length">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <div class="control">
              <%= f.password_field :password, autocomplete: "new-password" , class:"input" , type:"password" %>
              </div>
              </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"input" , type:"password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" , class:"button is-primary is-fullwidth" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>