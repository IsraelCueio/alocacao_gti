
<div class="columns is-centered is-mobile mt-5">
  <div class="column is-four-fifths-mobile is-half-tablet is-two-fifths-desktop is-one-third-widescreen">
    <div class="card mt-3">
      <div class="card-content">
        <h2 class="title has-text-centered">Log in</h2> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email , class:"label"%>
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input", type:"text"%>
            </div>
          </div>

          <div class="field">
            <%= f.label :password , class:"label"%>
            <div class="control">
              <%= f.password_field :password, autocomplete: "current-password" , class:"input", type:"password"%>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in" , class:"button is-primary my-3"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
