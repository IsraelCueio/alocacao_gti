<div class="devise columns is-centered is-mobile mt-5">
  <div class="column is-four-fifths-mobile is-half-tablet is-two-fifths-desktop is-one-third-widescreen">
    <div class="card mt-3">
      <div class="card-content">
        <h2 class="title has-text-centered">Log in</h2> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="has-text-centered subtitle">
          <p>Vem fazer parte dessa <b> Ohana </b> </br>
          Entra a√≠ ;)<p>
          </div>

          <div class="field">
            <%= f.label :email , class:"label"%>
            <div class="control">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input", type:"text"%>
            </div>
          </div>

          <div class="field">
            <%= f.label :password , class:"label"%>
            <div class="control">
              <%= f.password_field :password, autocomplete: "current-password" , class:"input", type:"password"%>
            </div>
          </div>
          <div class="columns reverse-columns">
            <div class="column ">
              <% if devise_mapping.rememberable? %>
                <div class="field remember-me">
                  <%= f.check_box :remember_me %>
              <%= f.label :remember_me , class:"remember-me"%> <span class="remember-me">Remember-me</span>
            </div>
          <% end %>
            </div>
            <div class="column">
              <div class="forgot-password has-text-right has-text-left-mobile">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Entrar" , class:"button is-primary is-fullwidth"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
