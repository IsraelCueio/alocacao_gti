<div class="columns is-centered">
 <div class="column is-half">
    <p id="noticed"><%= notice %></p>

    <%= image_tag "/project.png"%>

    <h1 class="title is-1 has-text-centered">Projects</h1>
    <hr>

    <div class="table-container">
      <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th>Name</th>
            <th>Descriptions</th>
            <th>Type</th>
            <th>Complexity</th>
            <th>Internal</th>
            <th>State</th>
            <th>Load</th>
            <th>Options</th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td style="white-space: nowrap;"><%= project.name %></td>
              <td><%= project.descriptions %></td>
              <td><%= project.type_project %></td>
              <td><%= project.complexity %></td>
              <td><%= human_boolean(project.internal)%></td>
              <td><%= project.state %></td>
              <td><%= project.load %></td>
              <td style="white-space: nowrap;">
                <%= link_to 'Show', project, class:"mr-1" %>
                <%= link_to 'Edit', edit_project_path(project), class:"mr-1" %>
                <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class:"mr-1" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to 'New Project', new_project_path %>
  </div>
</div>