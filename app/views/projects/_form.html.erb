<%= form_for @project do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :descriptions %>
    <%= f.text_field :descriptions %>
  </div>

  <div class="field">
    <%= f.label :type_project %>
    <%= f.number_field :type_project %>
  </div>

  <div class="field">
    <%= f.label :complexity %>
    <%= f.number_field :complexity %>
  </div>

  <div class="field">
    <%= f.label :internal %>
    <%= f.check_box :internal %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.number_field :state %>
  </div>

  <h3>Membros do projeto</h3>
  <div id='member_projects'>
    <%= f.fields_for :member_projects do |member_project| %>
      <%= render 'member_project_fields', :f => member_project %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add member', f, :member_projects %>
    </div>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
