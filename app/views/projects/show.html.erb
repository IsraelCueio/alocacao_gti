<div class="columns is-centered is-mobile mt-5">
  <div class="column is-four-fifths-mobile is-half-tablet is-two-fifths-desktop is-one-third-widescreen">
    <p id="notice"><%= notice %></p>
    <div class="card mt-3">
      <div class="card-content">

        <div class="title">
          <h1 class="title has-text-centered"><%= Project.model_name.human %></h1>
        </div>
        <hr>
        
        <h2 class="subtitle">
          <strong><%= Project.human_attribute_name('name') %>:</strong> <%= @project.name %> 
        </h2>
        <hr>
        
        <span class="mr-2">
          <strong><%= ProjectType.model_name.human %>:</strong>
          <%= @project.project_type.name %>
        </span>
        <span class="mr-2">
          <strong><%= Project.human_attribute_name('complexity') %>:</strong>
          <%= t("enums.project.complexity.#{@project.complexity}") %>
        </span>
        
        <span class="mr-2">    
          <strong><%= Project.human_attribute_name('internal') %>:</strong>
          <%= t("boolean.#{@project.internal}") %>
        </span>

        <span class="mr-2">
          <strong><%= Project.human_attribute_name('state') %>:</strong>
          <%= t("enums.project.state.#{@project.state}") %>
        </span>
        <hr>

        <strong><%= t(:managers) %>:</strong>
        <% @project.managers.each do |manager| %>
          <p><%= manager.try(:name) %></p>
        <% end %>
        <hr>
        
        <strong><%= t(:consultants) %>:</strong>
        <% @project.developers.each do |consultant|%>
          <p><%= consultant.name %></p>
        <% end %>

      </div>
    </div>
    <div class="mt-4 ml-2">
      <%= link_to t('actions.edit'), edit_project_path(@project) %> |
      <%= link_to t('actions.back'), projects_path %>
    </div>
  </div>
</div>