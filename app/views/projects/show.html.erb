<div class="columns is-centered mt-5">
  <div class="column is-one-third">
    <p id="notice"><%= notice %></p>
    <div class="card mt-3">
      <div class="card-content">

        <div class="title">
          <h1 class="title has-text-centered">Project</h1>
        </div>
        <hr>
        
        <h2 class="subtitle">
          <strong>Name:</strong> <%= @project.name %> 
        </h2>
        <hr>

        <h2 class="subtitle">
            <strong>Descriptions:</strong> <%= @project.descriptions %> 
        </h2>
        <hr>
        
        <span class="mr-2">
          <strong>Type:</strong>
          <%= @project.type_project %>
        </span>
        <span class="mr-2">
          <strong>Complexity:</strong>
          <%= @project.complexity %>
        </span>
        
        <span class="mr-2">    
          <strong>Internal:</strong>
          <%= @project.internal %>
        </span>

        <span class="mr-2">
          <strong>State:</strong>
          <%= @project.state %>
        </span>
        <hr>

        <strong>Members:</strong>
        
        <% @project.members.each do |member|%>
          <p> <%= member.name %> </p>
        <% end %>

      </div>
    </div>
    <div class="mt-4 ml-2">
      <%= link_to 'Edit', edit_project_path(@project) %> |
      <%= link_to 'Back', projects_path %>
    </div>
  </div>
</div>