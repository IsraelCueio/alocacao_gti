<section class="section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <%#= image_tag "/members.png"%>
    <h1 class="title"><%=Member.model_name.human(count:2)%></h1>
    <div class="table-container">
      <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th><%= sort_link(@q, :name) %></th>
            <th><%= sort_link(@q, :load) %></th>
            <th><%= sort_link(@q, :exit_cycle) %></th>
            <th colspan="3"><%=t(:options)%></th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.name %></td>
              <td><%= member.load %></td>
              <td><%= t("boolean.#{member.exit_cycle}") %></td>
              <td><%= link_to t('actions.show'), member %></td>
              <td><%= link_to t('actions.edit'), edit_member_path(member) %></td>
              <td><%= link_to t('actions.destroy'), member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <br>
      <%= link_to t('actions.member.new'), new_member_path %>
    </div>
  </div>
</section>

