<%= form_for @member do |f| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <p>
  <strong>Load:</strong>
  <%= @member.calcload %>
  </p>

  <div class="field">
    <%= f.label :exit_cycle %>
    <%= f.check_box :exit_cycle %>
  </div>

  <h3>Cargo do membro</h3>
  <div id='member_positions'>
    <%= f.fields_for :member_positions do |member_position| %>
      <%= render 'member_position_fields', :f => member_position %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add position', f, :member_positions %>
    </div>
  </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
