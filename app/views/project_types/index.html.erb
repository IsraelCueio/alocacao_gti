<section class="section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1 class="title"><%=ProjectType.model_name.human(count:2)%></h1>
      <div class="table-container">
        <table class="table is-bordered is-striped is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th class="left-corner"><%=t(:name)%></th>
              <th><%=t(:load)%></th>
              <th class="right-corner has-text-centered"><%=t(:options)%></th>
            </tr>
          </thead>

          <tbody>
            <% @project_types.each do |project_type| %>
              <tr>
                <td class="left-corner"><%= project_type.name %></td>
                <td><%= t("enums.project_type.load.#{project_type.load}") %></td>
                <td class="right-corner has-text-centered">
                  <%= link_to "/project_type/#{project_type.id}/edit" do%>
                    <i class="fas fa-edit"></i> Editar
                  <% end %>
                  <%= link_to "/project_type/#{project_type.id}" , method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <i class="fas fa-trash-alt"></i> Remover
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <br>
        <%= link_to t('actions.project_type.new'), new_project_type_path %>
      </div>
  </div>
</section>

